<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/widget_container"
    android:orientation="vertical">

    <!-- 1st Row -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:orientation="horizontal"
        android:paddingStart="30px"
        >

        <!-- Linggo -->
        <RelativeLayout
            android:layout_width="420px"
            android:layout_height="252px"
            android:orientation="vertical"
            android:background="@drawable/widget_inner_container"
            android:paddingStart="30px"
            >

            <ImageView
                android:id="@+id/buttonLingGo"
                android:layout_width="180px"
                android:layout_height="30dp"
                android:paddingStart="30px"
                android:paddingTop="30px"
                android:src="@drawable/linggo_topleft"
                tools:ignore="MissingConstraints"
                android:layout_alignParentTop="true"
                />
            <!--
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            </LinearLayout>
            -->

            <ImageView
            android:id="@+id/linggo_flag"
            android:layout_alignParentStart="@+id/buttonLingGo"
            android:src="@drawable/flag_korea"
            tools:ignore="MissingConstraints"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_below="@+id/buttonLingGo"
            />

        </RelativeLayout> <!-- End of Linggo -->

        <!-- Viewgo -->
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="420px"
            android:layout_height="252px"
            android:orientation="vertical"
            android:background="@drawable/widget_inner_container"
            android:paddingEnd="30px"
            android:layout_gravity="right"
            >
            <ImageView
                android:layout_width="180px"
                android:layout_height="48px"
                android:id="@+id/buttonViewGo"
                android:src="@drawable/top_viewgo"
                tools:ignore="MissingConstraints" />
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:id="@+id/viewgo_flag"
                    android:src="@drawable/flag_us"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </RelativeLayout>
